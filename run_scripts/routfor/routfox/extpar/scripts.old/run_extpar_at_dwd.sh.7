                         info_grid="${arg_array[$((${OPTIND}-1))]}"
                         OPTIND=$((${OPTIND} + 1))
                       else
                         info_grid="${OPTARG#*=}"
                       fi
                     fi
                     ;;
           *)        errflag=1
                     ;;
        esac
        ;;
        w) # work_dir
