                         OPTIND=$((${OPTIND} + 1))
                       else
                         work_dir="${OPTARG#*=}"
                       fi
                     fi
                     ;;
           *)        errflag=1
                     ;;
        esac  
;;
    \?) errflag=1
        ;;
  esac
  if (( errflag == 1 )) ; then
    eval errparm=\"\${$((${OPTIND}-1))}\"
    break
  fi
done
