                       fi
                     fi
                     ;;
           *)        errflag=1
                     ;;
        esac  
;;
     h) scr_info $0
        exit 0
        ;;
      i) # info_grid
        optarg=${OPTARG}
        case ${optarg%%=*} in
          nfo_grid) if [[ "${arg_array[$((${OPTIND}-2))]%%=*}" == "-${option}${optarg%%=*}" ]] ; then
